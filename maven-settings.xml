<settings>
    <servers>
        <server>
            <id>github</id>
            <username>${GITHUB_ACTOR}</username>
            <password>${GITHUB_TOKEN}</password>
        </server>
    </servers>
    <profiles>
        <profile>
            <id>central-gpg</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <central.publish>true</central.publish>
                <gpg.executable>gpg</gpg.executable>
                <gpg.keyname>${OSSRH_GPG_KEY_NAME}</gpg.keyname>
                <gpg.passphrase>${OSSRH_GPG_SECRET_KEY_PASSWORD}</gpg.passphrase>
            </properties>
        </profile>
    </profiles>
</settings>