<settings>
    <servers>
        <server>
            <id>maven-central</id>
            <username>${MAVEN_CENTRAL_USERNAME}</username>
            <password>${MAVEN_CENTRAL_PASSWORD}</password>
        </server>
    </servers>
    <profiles>
        <profile>
            <id>maven-central-deploy</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <gpg.executable>gpg</gpg.executable>
                <gpg.keyname>${OSSRH_GPG_KEY_NAME}</gpg.keyname>
                <gpg.passphrase>${OSSRH_GPG_SECRET_KEY_PASSWORD}</gpg.passphrase>
            </properties>
        </profile>
    </profiles>
</settings>