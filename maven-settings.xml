<settings>
    <servers>
        <server>
            <id>github</id>
            <username>${GITHUB_ACTOR}</username>
            <password>${GITHUB_TOKEN}</password>
        </server>
    </servers>
    <profiles>
        <profile>
            <id>central-config</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <central.publish>true</central.publish>
                <gpg.executable>gpg</gpg.executable>
                <gpg.keyname>${JRELEASER_GPG_KEYNAME}</gpg.keyname>
                <gpg.passphrase>${JRELEASER_GPG_PASSPHRASE}</gpg.passphrase>
            </properties>
        </profile>
    </profiles>
</settings>